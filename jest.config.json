{
  "preset": "jest-expo",
  "setupFilesAfterEnv": ["<rootDir>/jest-setup.js"],
  "testMatch": [
    "**/__tests__/**/*.(test|spec).(js|jsx|ts|tsx)",
    "**/*.(test|spec).(js|jsx|ts|tsx)"
  ],
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"],
  "transform": {
    "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
  },
  "moduleNameMapping": {
    "^@/(.*)$": "<rootDir>/$1"
  },
  "collectCoverageFrom": [
    "**/*.{js,jsx,ts,tsx}",
    "!**/__tests__/**",
    "!**/coverage/**",
    "!**/node_modules/**",
    "!**/babel.config.js",
    "!**/metro.config.js",
    "!**/jest.config.js"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "testEnvironment": "jsdom",
  "transformIgnorePatterns": [
    "node_modules/(?!(react-native|@react-native|react-native-.*|@expo|expo-.*|@shopify/flash-list|moti)/)"
  ]
}