{
  "expo": {
    "name": "TownTap",
    "slug": "TownTap",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "towntap",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "sdkVersion": "53.0.0",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.iabhinavv28.TownTap",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to location for business discovery and delivery tracking.",
        "NSLocationAlwaysUsageDescription": "This app needs access to location for business discovery and delivery tracking.",
        "NSCameraUsageDescription": "This app uses camera to capture photos for reviews and business registration.",
        "NSMicrophoneUsageDescription": "This app uses microphone for voice messages in chat.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to select images."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "statusBarStyle": "auto",
      "statusBarTranslucent": true,
      "package": "com.iabhinavv28.TownTap",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "CAMERA",
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "POST_NOTIFICATIONS"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-system-ui",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "This app needs access to location for business discovery and delivery tracking.",
          "isIosBackgroundLocationEnabled": true,
          "isAndroidBackgroundLocationEnabled": true
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#3B82F6",
          "defaultChannel": "default",
          "sounds": ["./assets/sounds/notification.wav"]
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "This app needs access to photo library to select images for reviews and business registration.",
          "cameraPermission": "This app uses camera to capture photos for reviews and business registration."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "8fefc4f2-0dec-4946-9e86-cf8a1cf55fb6"
      }
    }
  }
}
