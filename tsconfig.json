{
  "compilerOptions": {
    "lib": ["ES2015", "ES2017", "ES2018", "ES2019", "ES2020"],
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "ignoreDeprecations": "5.0"
  },
  "extends": "expo/tsconfig.base",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "supabase/**/*",
    "cleanup_backup/**/*"
  ]
}
